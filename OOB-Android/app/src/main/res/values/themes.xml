<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.OOBAndroid" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.OOBAndroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.OOBAndroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OOBAndroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>